        <Wpf:WebView2 Grid.ColumnSpan="5" HorizontalAlignment="Left" Height="535" Margin="40,145,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="1050" Source="https://webstatic.mihoyo.com/upload/static-resource/2021/11/08/02959a0f179436853c244dfc8b88e4e4_5824090375749016325.jpg"/>
