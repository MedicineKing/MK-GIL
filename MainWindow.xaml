            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.008"/>
                    <RotateTransform Angle="-0.227"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button Content="保存配置信息" HorizontalAlignment="Left" Height="30" Margin="1028,470,0,0" VerticalAlignment="Top" Width="95" Click="Button_Click_1" Grid.Column="4" Grid.Row="1"/>
